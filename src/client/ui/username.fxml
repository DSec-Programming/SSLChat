<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="250.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.UsernameController">
   <children>
      <Pane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <TextField fx:id="textField" layoutX="14.0" layoutY="62.0" prefHeight="25.0" prefWidth="160.0" promptText="Username..." />
            <Button fx:id="applyButton" layoutX="187.0" layoutY="62.0" mnemonicParsing="false" onAction="#handleSetUsername" text="Apply" />
            <Label layoutX="14.0" layoutY="14.0" text="Please enter your username">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label layoutX="24.0" layoutY="109.0" prefWidth="200.0" text="Info:                                 If your wanted username already exists, a number will be added to the end of your name !" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </children>
</AnchorPane>
